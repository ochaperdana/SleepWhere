<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="304dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:foreground="?attr/selectableItemBackground">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/a" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/imageView"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            tools:text="Judul" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="16dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <ImageButton
            android:id="@+id/rating2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/deskripsi"
            android:layout_marginRight="0dp"
            android:layout_toRightOf="@+id/rating1"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_star_border_black_24dp" />

        <ImageButton
            android:id="@+id/rating3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/deskripsi"
            android:layout_marginRight="0dp"
            android:layout_toRightOf="@+id/rating2"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_star_border_black_24dp" />

        <ImageButton
            android:id="@+id/rating4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/deskripsi"
            android:layout_marginRight="0dp"
            android:layout_toRightOf="@+id/rating3"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_star_border_black_24dp" />

        <ImageButton
            android:id="@+id/rating5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/deskripsi"
            android:layout_marginRight="0dp"
            android:layout_toRightOf="@+id/rating4"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_star_border_black_24dp" />

        <ImageButton
            android:id="@+id/ibShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/deskripsi"
            app:srcCompat="@android:drawable/ic_menu_share" />

        <ImageButton
            android:id="@+id/rating1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/deskripsi"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_star_border_black_24dp" />

        <ImageButton
            android:id="@+id/ibFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/deskripsi"
            android:layout_toLeftOf="@+id/ibShare"
            android:layout_toStartOf="@+id/ibShare"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>